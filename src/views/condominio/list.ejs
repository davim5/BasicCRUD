<%- include ../layouts/header.ejs %>
<div class="page-data">
    <div class="data-btn">
        <button onClick="addCondomin();">Add Condominio</button>
    </div>
    <div class="data-table">
        <table>
            <tr>
                <th width="50px">id</th>
                <th>Nome</th>
                <th>Habitantes</th>
                <th>Email</th>
                <th width="120px">Menu</th>
            </tr>

            <% if(data.length){
            for(var i = 0;i < data.length;i++) { %>
            <tr>
                <td><%=data[i].id%></td>
                <td><%=data[i].nome%></td>
                <td><%=data[i].habitantes%></td>
                <td><%=data[i].email%></td>
                <td>
                    <a class="a-inside edit" href="../condominio/edit/<%=data[i].id%>">Edit</a>
                    <a class="a-inside delete" href="../condominio/delete/<%=data[i].id%>">Delete</a>
                </td>
            </tr>
            <% }
            }else{ %>
            <tr>
                <td colspan="6">Sem condom√≠nios</td>
            </tr>
            <% } %>
        </table>
    </div>
</div>

